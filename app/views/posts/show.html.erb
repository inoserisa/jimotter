<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <ul class="list-inline">
                <li class="list-inline-item"><%= @post.created_at.strftime('%Y-%m-%d %H:%M') %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@post.content) %></p>
        </div>
      </article>
    </div>
  </div>
</div>