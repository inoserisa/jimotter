<% if @answer.errors.present? %>
  <%= turbo_stream.replace "answer-form" do %>
    <%= render 'answers/form', answer: @answer, question: @answer.question %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "answers" do %>
    <%= render 'answers/answer', answer: @answer %>
  <% end %>
  <%= turbo_stream.replace "answer-form" do %>
    <%= render 'answers/form', answer: answer.new, question: @answer.question %>
  <% end %>
<% end %>