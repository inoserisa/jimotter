<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 10vh;">
  <div class="row">
    <div class="jumbotron jumbotron-fluid col-12">
      <div class="col-lg-7 col-md-7">
        <div class="text-center custom-title-top"><span>私の地元、</span></div>
        <div class="text-center custom-title-under mb-4"><span>知名度低すぎ…!?</span></div>
        <div class="d-flex justify-content-center">
          <% if user_signed_in? %>
              <div class="d-flex flex-column align-items-center">
                <div>
                  <%= link_to "あるあるを投稿", new_post_path, class: "btn text-light rounded-pill post-button mb-3", data: { turbo: false } %>
                </div>
                <div>
                  <%= link_to "みんなに質問", new_question_path, class: "btn text-light rounded-pill post-button mb-3" %>
                </div>
              </div>
          <% else %>
            <%= link_to "ログインしてアピールする", new_user_session_path, class: "btn btn-danger rounded-pill mt-2 post-button" %>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <div class="mt-3">
          <h3 class="text-center search-title">地域で検索</h3>
          <h6 class="text-center search-title">都道府県のみでも検索できます</h6>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <div class="mt-3 mb-4">
          <%= render 'posts/searchform', q: @q %>
        </div>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="d-flex">
        <h6>新着投稿</h6>
        <%= link_to posts_path, class: "ms-auto link-dark", data: { turbo: false } do %>
          <h6>もっと見る</h6>
        <% end %>
      </div>
      <% @posts.each do |post| %>
        <div class="card mb-3 text-decoration-none shadow fadeUp">
          <div class="card-body ps-4">
            <div class="d-flex mb-2">
              <%= link_to post.user.name, user_path(post.user), class: "link-dark name-link" %>
              <div class="area-box ms-2"><%= post.prefecture.name %></div>
              <div class="area-box ms-2"><%= post.city.name %></div>
              <div class="ms-auto"><%= link_to "詳細", post_path(post.id), data: { turbo: false } %></div>
            </div>
            <p class="mb-0"><%= post.content %></p>
            <small class="mb-0 d-flex flex-row-reverse"><%= l post.created_at %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>