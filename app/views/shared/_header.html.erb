<header>
  <div class="fixed-top">
    <nav class="navbar navbar-expand-lg navbar-dark header-color shadow">
      <div class="container">
        <%= link_to image_tag('app-logo.svg', class: 'navbar-brand app-logo'), root_path, data: { turbo: false } %>

        <% if current_user %>
          <a href="#" class="nav-link text-light ms-auto mx-3 d-lg-none" data-bs-toggle="modal" data-bs-target="#notificationsModal">
            <% if current_user.notifications.where(checked: false).exists? %>
              <i id="notification-icon-small" class="fa-solid fa-bell faa-wrench animated" style="color: #f2ee7d;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="通知"></i>
            <% else %>
              <i id="notification-icon-small" class="fa-solid fa-bell" style="color: #FFF;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="通知"></i>
            <% end %>
          </a>
        <% end %>

        <% if user_signed_in? %>
          <i class="fa-solid fa-circle-question nav-link d-lg-none " style="color: #ffffff; margin-right: 15px;" id="start-tour-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="チュートリアル"></i>
        <% else %>
          <i class="fa-solid fa-circle-question ms-auto nav-link d-lg-none " style="color: #ffffff; margin-right: 15px;" id="start-tour-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="チュートリアル"></i>
        <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto main-nav align-items-center">
            <% if current_user %>
              <li class="nav-item">
                <a href="#" class="nav-link text-light d-none d-lg-inline" data-bs-toggle="modal" data-bs-target="#notificationsModal">
                  <% if current_user.notifications.where(checked: false).exists? %>
                    <i id="notification-icon-large" class="fa-solid fa-bell faa-wrench animated" style="color: #f2ee7d;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="通知"></i>
                  <% else %>
                    <i id="notification-icon-large" class="fa-solid fa-bell" style="color: #FFF;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="通知"></i>
                  <% end %>
                </a>
              </li>
            <% end %>
            <li>
              <i class="fa-solid fa-circle-question nav-link d-lg-inline" style="color: #ffffff;" id="start-tour-lg" data-bs-toggle="tooltip" data-bs-placement="bottom" title="チュートリアル"></i>
            </li>
            <li class="nav-item">
              <%= link_to "サイトについて", about_path, class: 'nav-link header-text' %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link header-text' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link header-text' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link header-text' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link header-text' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
@media (min-width: 992px) {
  .d-lg-none {
    display: none !important;
  }
}

@media (max-width: 991.98px) {
  .d-lg-inline {
    display: none !important;
  }
}
</style>