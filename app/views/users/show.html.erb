<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-10 card shadow">
			<div class="card-body">
        <div class="mypage-container mt-3">
          <h6>ユーザー名：<%= @user.name %></h6>
        </div>
        <h6 class="text-center">投稿一覧</h6>
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <div class="post card mb-2">
              <div class="card-body px-4 py-3">
                <div class="d-flex mb-1">
                  <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none link-dark name-link" %>
                  <div class="ms-auto"><%= link_to "詳細", post_path(post), data: { turbo: false } %></div>
                </div>
                <div class="d-flex mb-2">
                  <div class="area-box"><%= post.prefecture.name %></div>
                  <div class="area-box ms-2"><%= post.city.name %></div>
                </div>
                <p class="mb-0"><%= post.content %></p>
                <div class="d-flex">
                  <small class="ms-2 ms-auto"><%= l post.created_at %></small>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-center">投稿はありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>