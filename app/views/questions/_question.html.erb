<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <% @questions.each do |question| %>
        <div class="col-12 card mb-3 text-decoration-none shadow fadeUp">
          <div class="card-body">
            <div class="d-flex mb-2">
              <%= link_to question.user.name, user_path(question.user), class: "link-dark name-link" %>
              <div class="ms-auto"><%= link_to "詳細", question_path(question.id) %></div>
            </div>
            <p class="mb-0"><%= question.content %></p>
            <small class="mb-0 d-flex flex-row-reverse"><%= l question.created_at %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>