<%= form_with model: @question, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <div class="mb-3">
        <%= f.collection_select :area_id, Area.all, :id, :name, { prompt: "全地域対象" }, { class: "form-select" } %>
      </div>

      <%= f.text_area :content, class: "form-control mb-3", rows:7 %>
    </div>

    <div class="d-flex justify-content-center">
      <%= f.submit "投稿", class: "btn btn-primary postcreate-button w-100 mb-5 mt-3" %>
    </div>
<% end %>