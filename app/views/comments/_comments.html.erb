<h5 class="mt-3">コメント一覧</h5>
  <% @comments.each do |comment| %>
  <div class="border comment-border mb-2">
    <p class="mt-2 mb-1 px-3"><%= comment.user.name %></p>
    <p class="mb-1 px-3"><%= comment.comment_content %></p>
    <small class="px-3"><%= l comment.created_at %></small>
  </div>
  <% end %>
</div>