<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center mb-4">通知一覧</h4>
      <% if @notifications.present? %>
        <% @notifications.each do |notification| %>
          <div class="col-12 card mb-3 text-decoration-none shadow fadeUp">
            <div class="card-body">
              <div class="d-flex mb-2">
                <%= render "#{notification.action_type}", notification: notification %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="d-flex justify-content-center">
          <%= paginate @notifications, theme: 'bootstrap-5' %>
        </div>
      <% else %>
        通知はありません
      <% end %>
    </div>
  </div>
</div>