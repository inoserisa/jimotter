<% breadcrumb :user_signin %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="col-12 card shadow mb-5">
        <div class="card-body">
          <h2 class="pb-4 text-center"><%= t('.sign_in') %></h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3 px-2">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mb-3 px-2">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="mb-4 mt-0 d-flex justify-content-center">
              <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <div class="text-center mb-4">
            <%= render "devise/shared/links" %>
          </div>

          <h6 class="sns-login-or">または</h6>

          <div class="text-center mt-3 mb-3">
            <%= link_to image_tag('X_sign_in.svg'), user_twitter_omniauth_authorize_path, method: :post %>
          </div>
          <div class="text-center mb-3">
            <%= link_to image_tag('Google_sign_in.svg'), user_google_oauth2_omniauth_authorize_path, method: :post %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
